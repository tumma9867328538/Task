<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme -->
    </style>

    <style name="ShapeAppearanceOverlay.Cut">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme_" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pinkdark</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/graylight</item>
        <item name="colorControlNormal">@color/graydark</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="AppTheme_1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pinkdark</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/pinkdark</item>
        <item name="colorControlNormal">@color/graydark</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="MyTimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/graydark</item>
        <item name="android:numbersTextColor">#fff</item>
        <item name="android:numbersInnerTextColor">#fff</item>
        <item name="android:numbersSelectorColor">@color/graylight</item>
        <item name="android:amPmTextColor">#fff</item>
    </style>


</resources>
